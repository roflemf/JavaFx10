<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.HBox?> <!-- xml주석문 기호, 임포트 -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<HBox xmlns:fx="http://javafx.com/fxml/1"> <!-- HBox는 컨트롤을 수평으로 배치하는 레이아웃 -->

	<padding>
		<Insets top = "50" right = "50" bottom = "50" left = "50" />
		<!-- 시계방향으로 위, 오른쪽 , 아래쪽, 왼쪽 안여백 설정 -->
	</padding>
	
	<spacing>30</spacing> <!-- 컨트롤 간의 수평 간격 -->

	<children> <!-- 자식 컨트롤 추가 -->
		<TextField> <!--  TextField 는 한줄 입력 필드 -->
			<prefWidth>300</prefWidth> <!-- 입력필드 폭 -->
		</TextField>
	
		<Button>
			<text>확인</text> <!-- 버튼 위 캡션 문자열 -->
		</Button>
	</children>
</HBox>

